{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015"],
    "allowJs": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "checkJs": true,
    "module": "commonJs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node"]
}
